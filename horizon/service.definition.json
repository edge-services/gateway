{
    "org": "$HZN_ORG_ID",
    "label": "$SERVICE_NAME for $ARCH",
    "description": "Our Edge Gateway Service",
    "public": true,
    "documentation": "",
    "url": "$SERVICE_NAME",
    "version": "$SERVICE_VERSION",
    "arch": "$ARCH",
    "sharable": "multiple",
    "requiredServices": [{
        "url": "edge-influx",
        "org": "$HZN_ORG_ID",
        "versionRange": "[0.0.0,INFINITY)",
        "arch": "$ARCH"
    }],
    "userInput": [
        {
            "name": "INFLUXDB_URL",
            "label": "INFLUXDB_URL",
            "type": "string",
            "defaultValue": "http://localhost:8086"
        },
        {
            "name": "INFLUXDB_TOKEN",
            "label": "INFLUXDB_TOKEN",
            "type": "string",
            "defaultValue": "SatnamWaheguruJi1"
        },
        {
            "name": "INFLUXDB_ORG",
            "label": "INFLUXDB_ORG",
            "type": "string",
            "defaultValue": "IBM"
        },
        {
            "name": "INFLUXDB_BUCKET",
            "label": "INFLUXDB_BUCKET",
            "type": "string",
            "defaultValue": "smartthings"
        },
        {
            "name": "DB_FILE",
            "label": "DB_FILE",
            "type": "string",
            "defaultValue": "/data/db.json"
        },
        {
            "name": "SIMULATE",
            "label": "SIMULATE",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "FLOW_URL",
            "label": "FLOW_URL",
            "type": "string",
            "defaultValue": "http://localhost:1880/event"
        },
        {
            "name": "AUTH_API_URL",
            "label": "AUTH_API_URL",
            "type": "string",
            "defaultValue": "https://smartthings-auth.mybluemix.net/api"
        },
        {
            "name": "IOT_API_URL",
            "label": "IOT_API_URL",
            "type": "string",
            "defaultValue": "https://smartthings-iot.mybluemix.net/api"
        },
        {
            "name": "TENANT_ID",
            "label": "TENANT_ID",
            "type": "string",
            "defaultValue": "ibm"
        },
        {
            "name": "CLIENT_ID",
            "label": "CLIENT_ID",
            "type": "string",
            "defaultValue": "EdgeApplication"
        },
        {
            "name": "CLIENT_SECRET",
            "label": "CLIENT_SECRET",
            "type": "string",
            "defaultValue": "41b5c0b8-7482-4c46-b323-8458f1cf3ed0"
        }
    ],
    "deployment": {
        "services": {
            "edge-gateway": {
                "image": "${DOCKER_IMAGE_BASE}_$ARCH:$SERVICE_VERSION",
                "ports": [ 
                    { "HostIP": "0.0.0.0" , "HostPort": "9000:9000/tcp"}
                ],
                "network": "host",
                "binds": ["/home/edge-data:/data/"],
                "devices": ["/dev/mem:/dev/mem", "/sys/class/gpio:/sys/class/gpio"],
                "privileged": true
            }
        }
    }
}
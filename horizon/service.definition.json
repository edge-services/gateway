{
    "org": "$HZN_ORG_ID",
    "label": "$SERVICE_NAME for $ARCH",
    "description": "Our Edge Gateway Service",
    "public": true,
    "documentation": "",
    "url": "$SERVICE_NAME",
    "version": "$SERVICE_VERSION",
    "arch": "$ARCH",
    "sharable": "multiple",
    "requiredServices": [{
        "url": "edge-mongo",
        "org": "$HZN_ORG_ID",
        "versionRange": "[0.0.0,INFINITY)",
        "arch": "$ARCH"
    }],
    "userInput": [
        {
            "name": "DB_CONNECTOR",
            "label": "DB Connector",
            "type": "string",
            "defaultValue": "mongodb"
        },
        {
            "name": "DB_HOST",
            "label": "DB Host",
            "type": "string",
            "defaultValue": "edge-mongo"
        },
        {
            "name": "DB_PORT",
            "label": "DB Port",
            "type": "string",
            "defaultValue": "27017"
        },
        {
            "name": "DB_USERNAME",
            "label": "DB Username",
            "type": "string",
            "defaultValue": "sinny777"
        },
        {
            "name": "DB_PASSWORD",
            "label": "DB Password",
            "type": "string",
            "defaultValue": "1SatnamW"
        },
        {
            "name": "DB_NAME",
            "label": "DB Name",
            "type": "string",
            "defaultValue": "smartthings"
        },
        {
            "name": "SIMULATE",
            "label": "SIMULATE",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "AUTH_SVC_ENDPOINT",
            "label": "AUTH_SVC_ENDPOINT",
            "type": "string",
            "defaultValue": "http://smartthings-auth.mybluemix.net"
        },
        {
            "name": "IOT_SVC_ENDPOINT",
            "label": "IOT_SVC_ENDPOINT",
            "type": "string",
            "defaultValue": "http://smartthings-iot.mybluemix.net"
        },
        {
            "name": "TENANT_ID",
            "label": "TENANT_ID",
            "type": "string",
            "defaultValue": "ibm"
        },
        {
            "name": "CUSTOMER_ID",
            "label": "CUSTOMER_ID",
            "type": "string",
            "defaultValue": "f057feb8-4045-4e56-b521-c46168c43c06"
        },
        {
            "name": "CLIENT_ID",
            "label": "CLIENT_ID",
            "type": "string",
            "defaultValue": "texas-instruments"
        },
        {
            "name": "CLIENT_SECRET",
            "label": "CLIENT_SECRET",
            "type": "string",
            "defaultValue": "39a7d908-bbf0-42ca-ac11-6b3511df891d"
        }
    ],
    "deployment": {
        "services": {
            "edge-gateway": {
                "image": "${DOCKER_IMAGE_BASE}_$ARCH:$SERVICE_VERSION",
                "ports": [ 
                    { "HostIP": "0.0.0.0" , "HostPort": "9000:9000/tcp"}
                ],
                "network": "host",
                "devices": ["/dev/mem:/dev/mem", "/sys/class/gpio:/sys/class/gpio"],
                "privileged": true
            }
        }
    }
}
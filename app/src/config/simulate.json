{
    "devices": [
        {
            "type":"MultiSensorBoard",
            "uniqueId":"SB_MICRO-3C71BF4340FC",
            "publish": [
                {
                    "frequency": "*/5 * * * * *",
                    "sensors": [
                        {"name": "hum", "config" : {"min": 54, "max": 58}},
                        {"name": "temp", "config": {"min": 30, "max": 35}},
                        {"name": "press", "config": {"min": 974, "max": 976}},
                        {"name": "alt", "config": {"min": 304, "max": 306}}                       
                    ]  
                }            
            ]            
        }
    ],
    "transformations": [
        {
            "deviceType": "MultiSensorBoard",
            "transformFunc": "function transform(data) {\n console.log('In Transform function: >> ', data);\n return data;\n }"
        }
    ],
    "rules": [
        {
            "conditions": {
                "priority": 1,
                "all": [
                    {
                        "operator": "greaterThanInclusive",
                        "value": 30,
                        "fact": "d",
                        "path": "$.temp"
                    },
                    {
                        "operator": "greaterThanInclusive",
                        "value": 55,
                        "fact": "d",
                        "path": "$.hum"
                    }
                ]
            },
            "priority": 1,
            "event": {
                "type": "HotNHumid",
                "params": {
                    "message": "Its too hot, turn on the AC!",
                    "metadata": {}
                }
            },
            "name": "HotNHumid"
        }     
    ]
}
